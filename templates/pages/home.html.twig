{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class ="jumbotron text-center">
            <!--<h1> Bienvenue sur DungeonRush !</h1>-->
            {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                {% if is_granted('ROLE_ADMIN') %}
                    <p> Que voulez-vous faire ? </p>
                    <a class="btn btn-success" href="{{ path('addWeapon') }}">Ajouter une arme</a>
                    <a class="btn btn-success" href="{{ path('addMonster') }}">Ajouter un monstre</a>
                    <a class="btn btn-success" href="{{ path('addCharacterClass') }}">Ajouter une classe</a>
                    <a class="btn btn-success" href="{{ path('addMember') }}">Ajouter un move</a>
                    <br><br>
                    <a class="btn btn-success" href="#">Modifier une arme</a>
                    <a class="btn btn-success" href="#">Modifier un monstre</a>
                    <a class="btn btn-success" href="#">Modifier un move</a>
                {% endif %}
                 <br>
                 <!-- <p> Connectez-vous ou inscrivez-vous pour jouer à DungeonRush !</p> -->
                 <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                     <ol class="carousel-indicators">
                         <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                         <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                     </ol>
                     <div class="carousel-inner">
                         <div class="carousel-item active">
                             <img class="d-block w-100" src="{{ asset('/build/images/accueil1.jpg') }}" alt="First slide">
                             <div class="carousel-caption d-none d-md-block">
                                 <h5>Rejoins l'aventure !</h5>
                                 <p>Des centaines de monstres à combattre</p>
                                 <p>Choisis ton équipe et fais-la évoluer !</p>
                             </div>
                         </div>
                         <div class="carousel-item">
                             <img class="d-block w-100" src="{{ asset('/build/images/accueil2.jpg') }}" alt="Second slide">
                             <div class="carousel-caption d-none d-md-block">
                                 <h5>Rejoins l'aventure !</h5>
                                 <p>Des centaines de monstres à combattre</p>
                                 <p>Choisis ton équipe et fais-la évoluer !</p>
                             </div>
                         </div>
                     </div>
                     <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                         <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                         <span class="sr-only">Previous</span>
                     </a>
                     <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                         <span class="carousel-control-next-icon" aria-hidden="true"></span>
                         <span class="sr-only">Next</span>
                     </a>
                 </div>
            {% endif %}
        </div>
    </div>

{% endblock body %}