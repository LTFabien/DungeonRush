{% extends 'base.html.twig' %}

{% form_theme formClass 'bootstrap_4_layout.html.twig' %}

{% block body %}

    <h1>Ajouter une classe de charactère</h1>

    {{ form_start(formClass) }}
    <div class="form-group">
        <label for="">Nom</label>
        {{ form_widget(formClass.name) }}
    </div>

    <div class="form-group">
        <label for="">description</label>
        {{ form_widget(formClass.description) }}
    </div>

    <div class="form-group">
        <label for="">Armes autorisées</label>
        {{ form_widget(formClass.authorized_weapons) }}
    </div>

    <div class="form-group">
        <label for="">Move autorisés</label>
        {{ form_widget(formClass.authorized_move) }}
    </div>

    <div class="form-group">
        <label for="">Armures autorisées autorisés</label>
        {{ form_widget(formClass.authorized_armors) }}
    </div>


    <div class="form-group">
        <label for="">HP max</label>
        {{ form_widget(formClass.HPmax) }}
    </div>


    <div class="form-group">
        <label for="">MP max</label>
        {{ form_widget(formClass.MPmax) }}
    </div>

    <div class="form-group">
        <label for="">Strength</label>
        {{ form_widget(formClass.Strength) }}
    </div>

    <div class="form-group">
        <label for="">Vitality</label>
        {{ form_widget(formClass.Vitality) }}
    </div>

    <div class="form-group">
        <label for="">Speed</label>
        {{ form_widget(formClass.Speed) }}
    </div>

    <div class="form-group">
        <label for="">Spirit</label>
        {{ form_widget(formClass.Spirit) }}
    </div>

    <div class="form-group">
        <label for="">Intelligence</label>
        {{ form_widget(formClass.Intelligence) }}
    </div>

    <button type="submit" class="btn btn-success">Ajouter !</button>
    {{ form_end(formClass) }}

{% endblock %}