{% extends 'base.html.twig' %}

{% form_theme formClass 'bootstrap_4_layout.html.twig' %}

{% block body %}

    <div id = "signuppage" class="container">
        <div id="signup" class ="jumbotron text-center" >
            <h1 id="formTitle"> Ajouter une classe de personnage </h1>

            {{ form_start(formClass) }}
            <div class="form-group">
                <label for="">Nom</label>
                {{ form_widget(formClass.name) }}
            </div>

            <div class="form-group">
                <label for="">description</label>
                {{ form_widget(formClass.description) }}
            </div>
            <div class="form-group">
                <label for="">Armes autorisées</label>
                {{ form_widget(formClass.authorized_weapons) }}
            </div>

            <div class="form-group">
                <label for="">Move autorisés</label>
                {{ form_widget(formClass.authorized_move) }}
            </div>

            <button type="submit" class="btn btn-success">Ajouter !</button>
            {{ form_end(formClass) }}
        </div>
    </div>

{% endblock %}