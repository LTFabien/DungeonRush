
{% extends 'pages/baseInGame.html.twig' %}

{% block body %}

    <div class="container">
        <h1 class = "jumbotron-heading"> Voici les Stages disponibles !</h1>
        <div class="div row flex">
            {% for stage in stages %}
                <div class="col-3">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">
                                <a> {{ stage.name }}</a>
                            </h5>
                        </div>
                        <a href="{{ path('editStage', {'id': stage.id}) }}" class="btn btn-primary">Modifier</a><br>
                        <a href="{{ path('deleteStage', {'id': stage.id}) }}" class="btn btn-danger">Supprimer</a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}