{% extends 'base.html.twig' %}

{% block title 'Inscription' %}
{% block body %}
    <div class="container">
        <div class ="jumbotron text-center">
            <h1> Inscription </h1>
            {{ form_start(form) }}
            {{ form_row(form.username, {'label' : 'Nom d\'utilisateur ', 'attr': {'placeholder':'Entrer votre nom d\'utilisateur'}}) }}
            {{ form_row(form.email, {'label' : 'Adresse mail ', 'attr': {'placeholder':'Entrer votre email'}}) }}
            {{ form_row(form.password, {'label' : 'Mot de passe ', 'attr': {'placeholder':'Entrez votre mot de passe'}}) }}
            {{ form_row(form.confirm_password, {'label' : 'Confirmation mot de passe ', 'attr': {'placeholder':'Répétez votre mot de passe'}}) }}
            <button type="submit" class="btn btn-success">Inscription !</button>
            {{ form_end(form) }}
        </div>
    </div>


{% endblock body %}