{% extends 'pages/baseInGame.html.twig' %}

{% block body %}

<h2>Voici vos consomables disponibles :</h2>

{% for consumable in team.Inventory.consumables %}
    <p> - {{ consumable.name }}</p>
{% endfor %}

    <h2>Voici vos armes disponibles :</h2>

{% for weapon in team.Inventory.weapons %}
    <p> - {{ weapon.name }} <a href="#" class="btn btn-primary">Equiper</a></p>
{% endfor %}

    <h2>Voici vos armures disponibles :</h2>

    {% for armor in team.Inventory.armors %}
        <p> - {{ armor.name }} <a href="#" class="btn btn-primary">Equiper</a></p>
    {% endfor %}

{% endblock %}

